---
import Avatar from "./Avatar.astro";
import Badge from "./Badge.astro";

interface Props {
  imageURL: string;
  name: string;
  title: string;
  highlightedBadges: string[];
  badges: string[];
  href: string;
}

const { imageURL, href, name, title, highlightedBadges, badges } = Astro.props;
---

<div
  class="w-full rounded-xl border-y-2 border-b-border-gradient-2/10 border-t-border-gradient-1/10 bg-gradient-to-br from-glass-gradient-1/60 from-0% via-glass-gradient-2/60 via-90% to-glass-gradient-3/60 to-100% text-foreground shadow-lg lg:w-full"
>
  <a
    href={href}
    class="flex flex-row-reverse items-center justify-between p-6 lg:flex-col"
  >
    <Avatar imageURL={href} style="size-16 sm:size-36 md:size-48" />
    <div
      class="flex flex-col lg:min-h-64 lg:items-center lg:justify-between lg:pt-4 xl:min-h-72 xxl:min-h-48"
    >
      <div class="flex flex-col pb-6 lg:items-center">
        <span
          class="text-base font-bold sm:text-2xl md:text-3xl lg:text-center lg:text-2xl"
        >
          {name}
        </span>
        <p
          class="pt-1 text-sm sm:text-xl md:text-2xl lg:text-center lg:text-xl"
        >
          {title}
        </p>
      </div>
      <div class="flex flex-wrap lg:justify-center">
        {
          highlightedBadges.map((badge) => (
            <Badge
              style="bg-orange text-orange-foreground mx-1 my-1"
              text={badge}
            />
          ))
        }
        {
          badges.map((badge) => (
            <Badge style="bg-badge mx-1 my-1" text={badge} />
          ))
        }
      </div>
    </div>
  </a>
</div>

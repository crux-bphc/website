---
import Layout from "./Layout.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<head>
  <meta property="og:title" content={title} />
  <meta name="twitter:title" content={title} />
  <meta charset="utf-8" />

  <title>{title}</title>
</head>

<Layout title={title}>
  <div class="p-6 text-foreground">
    <h1 class="mb-4 text-4xl font-bold">{title}</h1>
    <slot />
  </div>
</Layout>
